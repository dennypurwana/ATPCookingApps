<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semua Order"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:visibility="visible"/>
            <TextView
                android:layout_below="@+id/text_category"
                android:id="@+id/text_urutkan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cari berdasarkan :"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:visibility="visible"/>
            <Spinner
                android:id="@+id/spinnerMeja"
                android:layout_width="match_parent"
                android:layout_below="@+id/text_urutkan"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:entries="@array/urutkan"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerMeja"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/paramSearch"/>
            <android.support.v7.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/btnSearch"
                android:layout_below="@+id/paramSearch"
                android:text="Search"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/white"/>
            <android.support.v7.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/btnAll"
                android:layout_below="@+id/paramSearch"
                android:layout_toLeftOf="@+id/btnSearch"
                android:text="All"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/white"/>
    <RelativeLayout
        android:layout_below="@+id/btnSearch"
        android:id="@+id/titleTable"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/border_header_list">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/border_header_list">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meja"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/border_header_list"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Customer"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/border_header_list">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/totalOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Order"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/titleTable"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:listitem="@layout/list_row_order_report">
    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_below="@+id/recycler_view"
        android:id="@+id/footerTable"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/border_header_list"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/border_header_list">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/totalOrderAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp."
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
            <android.support.v7.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/btnPrint"
                android:layout_below="@+id/footerTable"
                android:text="Print"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/white"/>
            <android.support.v7.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/btnExportPdf"
                android:layout_below="@+id/footerTable"
                android:layout_toLeftOf="@+id/btnPrint"
                android:text="Export Pdf"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/white"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
        </RelativeLayout>
</android.support.v4.widget.NestedScrollView>

</RelativeLayout>