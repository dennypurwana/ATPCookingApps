<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/viewImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/imageMenuMakanan"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/burger_image"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_toRightOf="@id/viewImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titleMenuMakanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#512816"
                android:text="Burger Deluxe"
                android:paddingRight="20dp"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tipeMenuMakanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#512816"
                android:paddingRight="20dp"
                android:text="Burger Deluxe"
                android:textSize="10dp"
                android:layout_below="@+id/titleMenuMakanan"/>
            <TextView
                android:id="@+id/hargaMenuMakanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#512816"
                android:paddingRight="20dp"
                android:text="Rp.20000"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/tipeMenuMakanan"/>
            <EditText
                android:id="@+id/editTextCatatan"
                android:layout_below="@+id/hargaMenuMakanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:background="@null"
                android:textSize="12sp"
                android:visibility="gone"
                android:inputType="textNoSuggestions|textMultiLine"
                android:hint="catatan"/>
            <LinearLayout
                android:id="@+id/countOrderLayout"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_below="@+id/editTextCatatan"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <LinearLayout
                    android:id="@+id/btnKurang"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimaryDark">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_minus"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/jumlahPesanan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnTambah"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimaryDark">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_plus"/>
                </LinearLayout>
            </LinearLayout>



        </RelativeLayout>

        <ImageView
            android:id="@+id/addMakanan"
            android:visibility="visible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_add_primary"/>

        <ImageView
            android:id="@+id/checkMakanan"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_checkmark"/>
        <ImageView
            android:id="@+id/saveMakanan"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_save_as"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>