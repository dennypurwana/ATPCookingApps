<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">
            <RelativeLayout
                android:id="@+id/logoApps"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/image_home"
                >
                <TextView
                    android:id="@+id/titleApps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fooder"
                    android:textSize="36dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/subTitleApps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-Food Order-"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_below="@+id/titleApps"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <TextView
            android:id="@+id/labelMenu"
            android:layout_below="@+id/logoApps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="My Order"/>
            <LinearLayout
                android:id="@+id/btnNamaPemesan"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/labelMenu"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Pemesan"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <EditText
                android:id="@+id/edTextNamaPemesan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/btnNamaPemesan"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"/>
            <LinearLayout
                android:id="@+id/btnKategori"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/edTextNamaPemesan"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                >
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Detail Pesanan"
                       android:textColor="@color/white"
                       android:textStyle="bold"
                       android:textSize="14dp"
                       android:layout_marginLeft="20dp"
                       android:layout_centerVertical="true"/>
               </RelativeLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:scrollbars="none"
                android:visibility="gone"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/list_row_menu_makanan_order"
                android:layout_below="@+id/btnKategori"/>

            <LinearLayout
                android:id="@+id/btnDetailBayar"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/recycler_view"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meja Pesanan"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layoutMeja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnDetailBayar">
                <EditText
                    android:id="@+id/edTextMeja"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Isi nama meja"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/btnSelectMeja"
                    android:padding="10dp"/>
                <RelativeLayout
                    android:id="@+id/btnSelectMeja"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorPrimaryDark">
                    <ImageView
                        android:id="@+id/imageMenu"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="0dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_table_resto" />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/totalBayar"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/layoutMeja"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail Pembayaran"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/totalHarga"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/totalBayar">
                <RelativeLayout
                    android:id="@+id/imageCart"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorPrimaryDark">
               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"
                   android:src="@drawable/cart_icon"/>
            </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Harga"
                    android:layout_toRightOf="@id/imageCart"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/totalHargaOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_alignParentRight="true"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/layoutOrder"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/totalHarga"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order here"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnOrderMenu"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Order"
                android:layout_below="@+id/layoutOrder"
                android:backgroundTint="#33691E"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_marginTop="10dp"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:indeterminateTint="@color/colorPrimaryDark"
                    android:indeterminateTintMode="src_in"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>